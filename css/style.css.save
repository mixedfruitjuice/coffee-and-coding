html,body
{
    overflow-x: hidden; 
}
/* Clearfix */
.clearfix:before,
.clearfix:after {
    content: " ";
    display: table;
}
.clearfix:after {
    clear: both;
}
.clearfix {
    *zoom: 1;
}

.mediacentrale {
    position: absolute;
    min-width: 80%;
    max-width: 100%;
    opacity: 0.4;
    filter: alpha(opacity=40);
}

#beginning {
    height: 1080px;
}

#contact {  
    padding: 10px 0;
    background: #222;    
    width: 100%;
}

#social{
    margin: 0 auto;
    list-style-type: none !important;
}


#social li {
    text-align: center;
    display: inline-block;
}

#social img {
    width: 30%;
}

#social li p {
    color: #fff;
}

#beginning h2 {
    position: absolute;
    text-align: center;
    color: black;
    font-size: 60px;
    top: 20%;
    left: 0;
    width: 100%;
}

#about p {
    text-align: center;
    position: relative;
    font-size: 15px;
}

#team h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}

#contact h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}

#faq h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}

#sponsors h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}

#team img{
    float: left;
}

#team h4 {
    position: relative;
    
}

#about h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}

#venue h3 {
    position: relative;
    text-align: center;
    font-size: 30px;
}


.register {
    height: 100%;
    text-align: center;
}

#beginning div a {
    top: 54%;
}

.register a {
    z-index: 1;
    position: relative;
    text-align: center !important;
    color: black;
    font-size: 30px;
    text-decoration: none;
    padding: 10px 20px;
    border: solid 3px black;
    border-radius: 20px;
    -webkit-transition: all 0.7s ease;
    transition: all 0.7s ease;

}

.register a:hover {
    text-decoration: none;
    color: white;
    border-color: #5CBC6F;
    background-color: #5CBC6F;
    -webkit-transition: all 0.7 s ease;
    transition: all 0.7s ease;
}

nav {
    z-index: 2;
    height: 60px;
    width: 100%;
    background: #46C5CE;
    font-size: 15pt;
    font-family: 'PT Sans', Arial, sans-serif;
    font-weight: bold;
    position: fixed;
}

.nav-logo {
    margin-left: 10px;
    margin-top: 5px;
    float: left;
}

.nav-text {
    margin-left: 10px;
    margin-top: 18px;
    color: white;
    font-size 15pt;
    float: left;
}

nav ul {
    padding: 0;
    margin: 0 auto;
    float: right;
    height: 60px;
    line-height: 60px;
    white-space: nowrap;
}

nav li {
    display: inline;
    float: left;
}

nav a {
    color: #fff;
    outline: 0;
    display: inline-block;
    width: 100px;
    text-align: center;
    text-decoration: none;
    line-height: 60px;
    -webkit-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

nav li a {
    box-sizing:border-box;
    color: white;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
}

nav li:last-child a {
    border-right: 0;
}

nav a:hover, nav a:active, nav a:focus {
    text-decoration: none;
    outline: 0;
    color: white;
    background: #5CBC6F;
    -webkit-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

nav a#pull {
    display: none;
}

@media screen and (max-width: 1366px) {
    #beginning h2 {
        font-size: 40px;
        top: 15%;
    }

    #beginning div a {
        top: 30%;
    }
    
    #about {
        position: relative;
        bottom: 300px;
    }
    
    #team {
        position: relative;
        bottom: 300px;
    }
    
    #faq {
        position: relative;
        bottom: 300px;
    }
    
    #sponsors {
        position: relative;
        bottom: 300px;
    }
    
    #venue {
        position: relative;
        bottom: 300px;
    }
}

@media screen and (max-width: 1000px) {
    
    #team h4 {
        position: relative;
        float: none;
    }


    #beginning img {
        display: none;
    }

    #beginning h2 {
        top: 40%;
        color: black;
    }

    #beginning div a {
        top: 46%;
    }

    nav {
        height: auto;
    }
    nav ul {
        width: 100%;
        display: block;
        height: auto;
    }
    nav li {
        width: 50%;
        float: left;
        position: relative;
    }
    nav li a {
        border-bottom: 1px solid #576979;
        border-right: 1px solid #576979;
    }
    nav a {
        text-align: left;
        width: 100%;
        text-indent: 25px;
    }
    
    #about {
        position: relative;
        bottom: 360px;
    }
    
    #team {
        position: relative;
        bottom: 360px;
    }
    
    #faq {
        position: relative;
        bottom: 360px;
    }
    
    #sponsors {
        position: relative;
        bottom: 360px;
    }
    
    #venue {
        position: relative;
        bottom: 360px;
    }
}

/*Styles for screen 515px and lower*/
@media only screen and (max-width : 480px) {

    #beginning h2 {
        top: 10% !important;
        color: black;
    }

    #beginning div a {
        top: 30%;
    }

    nav {
        border-bottom: 0;
    }
    nav ul {
        float: left;
        display: none;
        height: auto;
    }
    nav a#pull {
        display: block;
        background-color: #46C5CE;
        width: 100%;
        position: relative;
    }

    nav a#pull:after {
        content:"";
        background: url('../img/nav-icon.png') no-repeat;
        width: 30px;
        height: 30px;
        display: inline-block;
        position: absolute;
        right: 15px;
        top: 10px;
    }
    
    #about {
        position: relative;
        bottom: 600px;
    }
    
    #team {
        position: relative;
        bottom: 600px;
    }
    
    #faq {
        position: relative;
        bottom: 600px;
    }
    
    #sponsors {
        position: relative;
        bottom: 600px;
    }
    
    #venue {
        position: relative;
        bottom: 600px;
    }
    
}

/*Smartphone*/
@media only screen and (max-width : 320px) {



    nav li {
        display: block;
        float: none;
        width: 100%;
    }
    nav li a {
        border-bottom: 1px solid #576979;
    }
}
